<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:CookinGest.Components">

    <Design.PreviewWith>
        <controls:TopSection />
    </Design.PreviewWith>

    <Style Selector="controls|TopSection">
        <Setter Property="Template">
            <ControlTemplate>
                <Border>
                    <StackPanel>
                        <TextBlock Classes="h4" Text="{TemplateBinding Title}"/>
                        <Border CornerRadius="12" ClipToBounds="True" Margin="10">
                            <Border.Background>
                                    <LinearGradientBrush StartPoint="0%,50%" EndPoint="100%,50%">
                                        <GradientStop Color="#40000000" Offset="0"/>
                                        <GradientStop Color="#00000000" Offset="1"/>
                                    </LinearGradientBrush>
                            </Border.Background>
                            <StackPanel Orientation="Horizontal">
                                <Border Padding="10">
                                    <ContentControl Content="{TemplateBinding Content}"/>
                                </Border>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>